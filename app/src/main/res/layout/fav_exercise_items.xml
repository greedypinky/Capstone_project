<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="com.project.capstone_stage2.MainActivity"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/exercise_card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="@dimen/cardview_default_elevation"
        card_view:cardUseCompatPadding="true"
        android:layout_margin="5dp"
        >

        <LinearLayout
            android:id="@+id/card_view_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/execise_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_orange_light"
                android:text="@string/default_category_name"
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimary"
                android:textSize="22dp"
                android:padding="16dp"
                />

            <TextView
                android:id="@+id/execise_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_green_light"
                android:text="@string/default_category_desc"
                android:textColor="@android:color/black"
                android:gravity="center_vertical"
                android:textSize="14dp"
                android:padding="16dp"
                />

            <!-- TODO:Add back the proper image view png, vector? -->

            <ImageView
                android:id="@+id/execise_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/execise_category_card_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/card_view_top"
        >

        <Button
            android:id="@+id/share_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_share"
            android:textSize="@dimen/btn_text_size"
            android:textColor="@color/colorPrimaryDark"/>
        <Button
            android:id="@+id/remove_fav_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_addFavorite"
            android:textSize="@dimen/btn_text_size"
            android:textColor="@color/colorPrimaryDark"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/exercise_loading_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"/>

</LinearLayout>