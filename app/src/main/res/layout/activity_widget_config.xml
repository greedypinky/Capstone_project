    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.capstone_stage2.WidgetConfigActivity"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/radio_category_group"
        android:layout_width="match_parent"
